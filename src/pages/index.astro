---import BaseLayout from "../layouts/BaseLayout.astro";import { Image } from 'astro:assets'import CohenLottery from '../../src/images/CohenLottery.png'import Schlessel from '../../src/images/schlessel.jpg'import Lichtenstein from '../../src/images/lichtenstein.jpg'import CharityBall from '../../src/images/charityball.png'import FelixSaloon from '../../src/images/felixsaloon.png'import LeviStrauss from '../../src/images/LeviStrauss.png'import PlayingCard from '../../src/images/playingcard.png'export const prerender = true;import NavAutocomplete from '../components/Search/NavAutocomplete'---<BaseLayout	title="Home - Kaplan Collection of Early American Judaica"	description="The Kaplan Collection documents commercial, social, religious, political, and cultural ties that connected Jews and the general public from the colonial era through the nineteenth century.">	<!-- Section Content -->	<section class="py-4 gap-6 place-items-start dark:bg-gray-900">		<div class="content-center grid grid-cols-1 md:grid-cols-2 gap-8 max-w-screen-xl px-4 mx-auto">			<!-- Text Content -->			<div class="md:content-center max-w-lg">				<!--<p					class="inline-block py-1 px-3 mb-4 text-indigo-100 bg-indigo-500 rounded-2xl uppercase text-xs font-semibold tracking-wider">					Beta				</p>-->				<h1 class="text-3xl font-bold tracking-tight text-gray-900 dark:text-gray-100 sm:text-4xl sm:leading-none mb-6">					Discover The Kaplan Collection				</h1>				<p class="text-gray-700 dark:text-gray-300 text-base md:text-lg mb-6">					The Kaplan Collection documents commercial, social, religious, political, and cultural ties that connected					Jews					and the general public from the colonial era through the nineteenth century.				</p>				<!-- Autocomplete Component -->				<div class="flex flex-col sm:flex-row gap-4">					<a href="/search"						 class="px-6 py-3 bg-indigo-600 text-white font-semibold rounded-xl hover:bg-indigo-700 transition">						Explore the Collection					</a>					<a href="/about/aboutthecollection"						 class="px-6 py-3 bg-white text-indigo-600 border border-indigo-600 font-semibold rounded-xl hover:bg-gray-100 dark:bg-gray-800 dark:text-indigo-400 dark:border-indigo-500 dark:hover:bg-gray-700 transition">						About the Collection					</a>				</div>			</div>			<!-- Image Gallery -->			<div class="content-center columns-1 sm:columns-2 md:columns-3 lg:gap-4 mt-6">				<!-- Lichtenstein -->				<div class="break-inside-avoid mb-8 group">					<div class="relative">						<a							href="https://www.kaplancollection.org/item/lichtenstein-brothers-co-cigar-factory-advertising-broadside-c72d4fb3"							class="absolute inset-0 z-10 bg-gray-200 text-center flex flex-col items-center justify-center opacity-0 group-hover:opacity-90 bg-opacity-90 duration-300"							aria-label="Lichtenstein Brothers & Co. Cigar Factory Advertising Broadside"						>							<h2 class="text-gray-900 dark:text-gray-100 text-lg font-semibold tracking-wide">								Lichtenstein Brothers & Co. Cigar Factory Advertising Broadside							</h2>						</a>						<a							href="https://www.kaplancollection.org/item/lichtenstein-brothers-co-cigar-factory-advertising-broadside-c72d4fb3"							class="relative"						>							<img								class="h-auto max-w-full rounded-lg"								src={Lichtenstein.src}								alt="Lichtenstein Brothers Cigar Factory Advertisement"							/>						</a>					</div>				</div>				<!-- Schlessel -->				<div class="break-inside-avoid mb-8 group">					<div class="relative">						<a							href="https://www.kaplancollection.org/item/broadside-advertisement-nathan-schlessel-fur-capes-new-ee4f608f"							class="absolute inset-0 z-10 bg-gray-200 text-center flex flex-col items-center justify-center opacity-0 group-hover:opacity-90 bg-opacity-90 duration-300"							aria-label="Broadside Advertisement for Nathan Schlessel, Fur Capes"						>							<h2 class="text-gray-900 dark:text-gray-100 text-lg font-semibold tracking-wide">								Broadside Advertisement for Nathan Schlessel, Fur Capes							</h2>						</a>						<a							href="https://www.kaplancollection.org/item/broadside-advertisement-nathan-schlessel-fur-capes-new-ee4f608f"							class="relative"						>							<img								class="h-auto max-w-full rounded-lg"								src={Schlessel.src}								alt="Nathan Schlessel Fur Capes Advertisement"							/>						</a>					</div>				</div>				<!-- Felix Token -->				<div class="break-inside-avoid mb-8 group">					<div class="relative">						<a							href="https://www.kaplancollection.org/item/felix-dining-saloon-civil-war-trade-token-4c083202"							class="absolute inset-0 z-10 bg-gray-200 text-center flex flex-col items-center justify-center opacity-0 group-hover:opacity-90 bg-opacity-90 duration-300"							aria-label="Felix Dining Saloon Civil War Trade Token"						>							<h2 class="text-gray-900 dark:text-gray-100 text-lg font-semibold tracking-wide">								Felix Dining Saloon Civil War Trade Token							</h2>						</a>						<a							href="https://www.kaplancollection.org/item/felix-dining-saloon-civil-war-trade-token-4c083202"							class="relative"						>							<img								class="h-auto max-w-full rounded-lg"								src={FelixSaloon.src}								alt="Felix Dining Saloon Civil War Trade Token"							/>						</a>					</div>				</div>				<!-- Hebrew Charity Ball -->				<div class="break-inside-avoid mb-8 group">					<div class="relative">						<a							href="https://www.kaplancollection.org/item/invitation-to-the-annual-hebrew-charity-ball-5c9da1b1"							class="absolute inset-0 z-10 bg-gray-200 text-center flex flex-col items-center justify-center opacity-0 group-hover:opacity-90 bg-opacity-90 duration-300"							aria-label="Hebrew Charity Ball Invitation"						>							<h2 class="text-gray-900 dark:text-gray-100 text-lg font-semibold tracking-wide">								Invitation to the Annual Hebrew Charity Ball at the American Academy of								Music, Philadelphia, February 6, 1873							</h2>						</a>						<a							href="https://www.kaplancollection.org/item/invitation-to-the-annual-hebrew-charity-ball-5c9da1b1"							class="relative"						>							<img								class="h-auto max-w-full rounded-lg"								src={CharityBall.src}								alt="Charity Ball Invitation"							/>						</a>					</div>				</div>				<!-- Hart Playing Card -->				<div class="break-inside-avoid mb-8 group">					<div class="relative">						<a							href="https://www.kaplancollection.org/item/playing-cards-manufactured-by-samuel-hart-co-24c1c1b9"							class="absolute inset-0 z-10 bg-gray-200 text-center flex flex-col items-center justify-center opacity-0 group-hover:opacity-90 bg-opacity-90 duration-300"							aria-label="Playing Cards Manufactured by Samuel Hart & Co., ca. 1860"						>							<h2 class="text-gray-900 dark:text-gray-100 text-lg font-semibold tracking-wide">								Playing Cards Manufactured by Samuel Hart & Co., ca. 1860							</h2>						</a>						<a							href="https://www.kaplancollection.org/item/playing-cards-manufactured-by-samuel-hart-co-24c1c1b9"							class="relative"						>							<img								class="h-auto max-w-full rounded-lg"								src={PlayingCard.src}								alt="Samuel Hart Playing Cards"							/>						</a>					</div>				</div>				<!-- Levi Strauss -->				<div class="break-inside-avoid mb-8 group">					<div class="relative">						<a							href="https://www.kaplancollection.org/item/trade-card-levi-strauss-co-seven-pocket-c815f850"							class="absolute inset-0 z-10 bg-gray-200 text-center flex flex-col items-center justify-center opacity-0 group-hover:opacity-90 bg-opacity-90 duration-300"							aria-label="Levi Strauss & Co. Trade Card"						>							<h2 class="text-gray-900 dark:text-gray-100 text-lg font-semibold tracking-wide">								Trade Card: Levi Strauss & Co. "Seven Pocket Engineers' Overall								Riveted", San Francisco							</h2>						</a>						<a							href="https://www.kaplancollection.org/item/trade-card-levi-strauss-co-seven-pocket-c815f850"							class="relative"						>							<img								class="h-auto max-w-full rounded-lg"								src={LeviStrauss.src}								alt="Levi Strauss & Co. Trade Card"							/>						</a>					</div>				</div>				<!-- Cohen Lottery -->				<div class="break-inside-avoid mb-8 group">					<div class="relative">						<a							href="https://www.kaplancollection.org/item/baltimore-hospital-lottery-broadside-a-cohens-lottery-421ef358"							class="absolute inset-0 z-10 bg-gray-200 text-center flex flex-col items-center justify-center opacity-0 group-hover:opacity-90 bg-opacity-90 duration-300"							aria-label="Playing Cards Manufactured by Samuel Hart & Co., ca. 1860"						>							<h2 class="text-gray-900 dark:text-gray-100 text-lg font-semibold tracking-wide">								Baltimore Hospital Lottery Broadside from Cohen's Lottery & Exchange								Office Advertisement, 1813							</h2>						</a>						<a							href="https://www.kaplancollection.org/item/baltimore-hospital-lottery-broadside-a-cohens-lottery-421ef358"							class="relative"						>							<img								class="h-auto max-w-full rounded-lg"								src={CohenLottery.src}								alt="Cohen Lottery"							/>						</a>					</div>				</div>			</div>		</div>	</section></BaseLayout>