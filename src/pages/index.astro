---import BaseLayout from "../layouts/BaseLayout.astro";import CohenLottery from '../images/CohenLottery.png';import DavidCohen from '../images/davidcohen.png';import Lichtenstein from '../images/Lichtenstein.png'import CharityBall from '../images/charityball.png';import FelixSaloon from '../images/felixsaloon.png';import LeviStrauss from '../images/LeviStrauss.png';import JonasLevy from '../images/JonasLevyPainting.jpg';import CohnStore from '../images/CohnStore.png';import PlayingCard from '../images/playingcard.png';import CanalLottery from '../images/CanalLottery.png';import Schlessel from '../images/schlessel.jpg'import NavAutocomplete from '../components/Search/NavAutocomplete'import WebsiteStructuredData from '@components/LinkedData/WebsiteStructuredData.astro'---<BaseLayout	title="Home - Kaplan Collection of Early American Judaica"	description="The Kaplan Collection documents commercial, social, religious, political, and cultural ties that connected Jews and the general public from the colonial era through the nineteenth century.">	<section class="py-4 gap-6 place-items-start bg-gray-50 dark:bg-gray-900">		<div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-screen-xl px-4 mx-auto">            <!-- Text Content -->			<div class="self-start max-w-lg">				<p					class="inline-block py-1 px-3 mb-4 text-pink-200 bg-pink-500 rounded-2xl uppercase text-xs font-semibold tracking-wider">                    Beta                </p>				<h1 class="text-3xl font-bold tracking-tight text-gray-900 dark:text-gray-100 sm:text-4xl sm:leading-none mb-6">					Discover The Kaplan Collection				</h1>				<p class="text-gray-700 dark:text-gray-300 text-base md:text-lg mb-6">					The Kaplan Collection documents commercial, social, religious, political, and cultural ties that connected					Jews                    and the general public from the colonial era through the nineteenth century.                </p>                <!-- Autocomplete Component -->                <div id="autocomplete">									<NavAutocomplete client:only="react" />                </div>            </div>			<!-- Image Gallery -->			<div class="columns-1 sm:columns-2 lg:columns-3 gap-4">				<!-- Image Card Template -->				<div class="break-inside-avoid mb-8 group">					<div class="relative">						<a							href="https://www.kaplancollection.org/item/lichtenstein-brothers-co-cigar-factory-advertising-broadside-c72d4fb3"							class="absolute inset-0 z-10 bg-gray-200 text-center flex flex-col items-center justify-center opacity-0 group-hover:opacity-90 bg-opacity-90 duration-300"							aria-label="Lichtenstein Brothers & Co. Cigar Factory Advertising Broadside"						>							<h2 class="text-gray-900 dark:text-gray-100 text-lg font-semibold tracking-wide">								Lichtenstein Brothers & Co. Cigar Factory Advertising Broadside							</h2>						</a>						<a							href="https://www.kaplancollection.org/item/lichtenstein-brothers-co-cigar-factory-advertising-broadside-c72d4fb3"							class="relative"						>							<img								class="h-auto max-w-full rounded-lg"								src={Lichtenstein.src}								alt="Lichtenstein Brothers Cigar Factory Advertisement"							/>						</a>					</div>				</div>				<!-- Repeat for Other Cards -->				<div class="break-inside-avoid mb-8 group">					<div class="relative">						<a							href="https://www.kaplancollection.org/item/broadside-advertisement-nathan-schlessel-fur-capes-new-ee4f608f"							class="absolute inset-0 z-10 bg-gray-200 text-center flex flex-col items-center justify-center opacity-0 group-hover:opacity-90 bg-opacity-90 duration-300"							aria-label="Broadside Advertisement for Nathan Schlessel, Fur Capes"						>							<h2 class="text-gray-900 dark:text-gray-100 text-lg font-semibold tracking-wide">								Broadside Advertisement for Nathan Schlessel, Fur Capes							</h2>						</a>						<a							href="https://www.kaplancollection.org/item/broadside-advertisement-nathan-schlessel-fur-capes-new-ee4f608f"							class="relative"						>							<img								class="h-auto max-w-full rounded-lg"								src={Schlessel.src}								alt="Nathan Schlessel Fur Capes Advertisement"							/>						</a>					</div>				</div>				<!-- Example for Additional Images -->				<div class="break-inside-avoid mb-8 group">					<div class="relative">						<a							href="https://www.kaplancollection.org/item/playing-cards-manufactured-by-samuel-hart-co-24c1c1b9"							class="absolute inset-0 z-10 bg-gray-200 text-center flex flex-col items-center justify-center opacity-0 group-hover:opacity-90 bg-opacity-90 duration-300"							aria-label="Playing Cards Manufactured by Samuel Hart & Co., ca. 1860"						>							<h2 class="text-gray-900 dark:text-gray-100 text-lg font-semibold tracking-wide">								Playing Cards Manufactured by Samuel Hart & Co., ca. 1860							</h2>						</a>						<a							href="https://www.kaplancollection.org/item/playing-cards-manufactured-by-samuel-hart-co-24c1c1b9"							class="relative"						>							<img								class="h-auto max-w-full rounded-lg"								src={PlayingCard.src}								alt="Samuel Hart Playing Cards"							/>						</a>					</div>				</div>			</div>		</div>	</section></BaseLayout>