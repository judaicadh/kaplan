---import BaseLayout from "../layouts/BaseLayout.astro";import { Image } from 'astro:assets';import LeonSampler from '../images/LeonSampler.jpg';import DavidCohen from '../images/davidcohen.jpg';import ErnestineRose from '../images/ErnestineRose.jpg';import Wetzler from '../images/wetzler.jpg';import CohnStore from '../images/CohnStore.jpg';import LeviStrauss from '../images/LeviStrauss.jpg';import JonasLevy from '../images/JonasLevyPainting.jpg';---<BaseLayout title="Home" /><div class="relative">    <!-- Background Masonry Grid and Overlay -->    <div class="absolute inset-0 overflow-hidden">        <div class="columns-2 sm:columns-3 md:columns-4 lg:columns-4 xl:columns-4 gap-4">            <!-- Images -->            <Image                    class="mb-4 w-full rounded-lg transition-all duration-300 filter grayscale hover:grayscale-0 break-inside-avoid"                    src={LeviStrauss}                    alt="Levi Strauss Trade Card"                    layout="constrained"            />            <Image                    class="mb-4 w-full rounded-lg"                    src={DavidCohen}                    alt="David Cohen Bar"                    layout="constrained"            />            <Image                    class="mb-4 w-full rounded-lg"                    src={LeonSampler}                    alt="Betsy Leon Sampler"                    layout="constrained"            />            <Image                    class="mb-4 w-full rounded-lg"                    src={ErnestineRose}                    alt="CDV of Ernestine Rose"                    layout="constrained"            />            <Image                    class="mb-4 w-full rounded-lg"                    src={CohnStore}                    alt="Photograph of L. Cohn's store in Los Angeles"                    layout="constrained"            />            <Image                    class="mb-4 w-full rounded-lg"                    src={Wetzler}                    alt="Fraktur by scrivener Martin Wetzler"                    layout="constrained"            />            <Image                    class="mb-4 w-full rounded-lg"                    src={JonasLevy}                    alt="Oil painting of Jonas Levy's ship"                    layout="constrained"            />            <!-- Add more images as needed -->        </div>        <!-- Overlay -->        <div class="absolute inset-0 bg-black opacity-50"></div>    </div>    <!-- Main Content -->    <div class="relative z-10 mx-auto max-w-2xl py-32 sm:py-48 lg:py-56 text-center text-white">        <h1 class="text-5xl font-semibold tracking-tight sm:text-7xl">           The Kaplan Collection of Early American Judaica        </h1>        </div>    </div></div>