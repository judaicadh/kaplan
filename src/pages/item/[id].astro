---import { getCollection } from "astro:content";import BaseLayout from '../../components/Layout/BaseLayout.astro';import IIIFViewer from "../../components/IIIF/IIIFViewer.jsx"; // Ensure this path is correctimport items from '../../data/items.json'; // Import your items data// Generate dynamic pathsexport async function getStaticPaths() {    return items.map((item) => ({        params: { id: item.id },  // Define the dynamic path using the item ID    }));}// Get the dynamic ID from the URLconst { id } = Astro.params;// Find the item with the matching IDconst itemData = items.find((item) => item.id === id);if (!itemData) {    throw new Error(`Item with ID ${id} not found.`);}// Retrieve the manifest URL directly from itemDataconst viewerManifest = itemData.manifestUrl; // Ensure this is correct---<BaseLayout title={itemData.title}>    <div class="bg-white">        <div class="mx-auto grid max-w-7xl grid-cols-1 items-center gap-x-8 gap-y-16 px-4 py-24 sm:px-6 sm:py-32 lg:grid-cols-2">            <div>                <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">{itemData.title}</h2>                <p class="mt-4 text-gray-500">{itemData.description}</p>                <dl class="mt-16 grid gap-x-6 gap-y-10 sm:gap-y-16 lg:gap-x-8">                    <div class="border-t border-gray-200 pt-4">                        <dt class="font-medium text-gray-900">Description</dt>                        <dd class="mt-2 text-sm text-gray-500">{itemData.description}</dd>                    </div>                    <div class="border-t border-gray-200 pt-4">                        <dt class="font-medium text-gray-900">Provenance</dt>                        <dd class="mt-2 text-sm text-gray-500">{itemData.provenance || "N/A"}</dd>                    </div>                    <div class="border-t border-gray-200 pt-4">                        <dt class="font-medium text-gray-900">Date</dt>                        <dd class="mt-2 text-sm text-gray-500">{itemData.date || "N/A"}</dd>                    </div>                </dl>            </div>            <div>                <!-- Pass the viewerManifest to the IIIFViewer -->                <IIIFViewer manifestUrl={viewerManifest} client:only="react" />            </div>        </div>    </div></BaseLayout>