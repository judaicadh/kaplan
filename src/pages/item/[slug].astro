---import BaseLayout from '../../layouts/BaseLayout.astro'import Clover from '../../components/IIIF/Clover'import items from '../../data/items.json' // Import your items dataimport { slugify } from '../../utils/slugify.js'// Generate dynamic paths using slugsexport async function getStaticPaths() {	const paths = items.map((item) => {		const slug = item.slug || slugify(item.title)		console.log(`Item ID: ${item.id}, Title: ${item.title}, Generated Slug: ${slug}`)		return slug ? { params: { slug } } : null	}).filter(Boolean)	if (paths.length === 0) {		console.warn('No valid paths generated for static pages.')	}	return paths}// Get the dynamic slug from the URLconst { slug } = Astro.params// Find the item with the matching slugconst itemData = items.find((item) => item.slug === slug || slugify(item.title) === slug)if (!itemData) {	throw new Error(`Item with slug ${slug} not found.`)}// Ensure `manifestUrls` is always an arrayconst manifestUrls = Array.isArray(itemData.manifestUrl) ? itemData.manifestUrl : [itemData.manifestUrl]---<BaseLayout title={itemData.title || 'Untitled'}>	<section class="py-4 bg-white md:py-4 dark:bg-gray-900 antialiased">		<div class="max-w-screen-xl   mx-auto 2xl:px-0">			<div class="lg:grid lg:grid-cols-2 lg:gap-8 xl:gap-16">				<!-- IIIF Viewer Section -->				<div class="shrink-0 max-w-md lg:max-w-lg mx-auto">					<Clover client:only="react" manifestUrls={manifestUrls} />				</div>				<!-- Item Details Section -->				<div class="mt-6 sm:mt-8 lg:mt-0">					<h1 class="text-xl font-semibold text-gray-900 sm:text-2xl dark:text-white">						{itemData.title}					</h1>					<hr class="my-6 md:my-8 border-gray-200 dark:border-gray-800" />					<p>{itemData.description || 'No description available.'}</p>					<hr class="my-6 md:my-8 border-gray-200 dark:border-gray-800" />					<p>{itemData.name || 'No people information available.'}</p>					<hr class="my-6 md:my-8 border-gray-200 dark:border-gray-800" />					<p>{itemData.geography || 'No geographical information available.'}</p>					<hr class="my-6 md:my-8 border-gray-200 dark:border-gray-800" />					<p>{itemData.type || 'No type available.'}</p>					<hr class="my-6 md:my-8 border-gray-200 dark:border-gray-800" />					<p>{itemData?.['categories.lvl2'] || 'No type available.'}</p>					<hr class="my-6 md:my-8 border-gray-200 dark:border-gray-800" />					<p>{itemData.PhysicalLocation || 'No location available.'}</p>					<hr class="my-6 md:my-8 border-gray-200 dark:border-gray-800" />					<p>{itemData.subject[0] || 'No subjects available.'}, {itemData.subject[1]}, {itemData.subject[3]} {itemData.subject[4]}</p>					<hr class="my-6 md:my-8 border-gray-200 dark:border-gray-800" />				</div>			</div>		</div>	</section></BaseLayout>