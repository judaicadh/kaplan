{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "paths": {
      "@components/*": ["src/components/*"]
    },

    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "lib": ["esnext", "dom"],
    "rootDir": "src",
    "skipLibCheck": true
  },
  "include": [
    "src",
    "src/env.d.ts"
    // if present
  ]
}
