{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "baseUrl": ".",
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "paths": {
      "@components/*": [
        "src/components/*"
      ],
      "@samvera/clover-iiif/*": [
        "node_modules/@samvera/clover-iiif/dist/*"
      ]
    },
    "jsx": "preserve",
    "jsxImportSource": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "rootDir": "src",
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true
  },
  "include": [
    "src",
    "src/env.d.ts"
  ]
}